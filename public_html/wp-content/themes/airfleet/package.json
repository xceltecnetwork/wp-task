{
  "engines": {
    "node": ">=6.9.1"
  },
  "scripts": {
    "dev": "run-p dev:core lint-watch",
    "dev:core": "cross-env NODE_ENV=development webpack --colors --config resources/build/webpack.development.js",
    "build": "cross-env NODE_ENV=production webpack --colors --config resources/build/webpack.production.js",
    "lint": "run-s -cl lint:wpcs lint:scripts lint:styles",
    "lint-fix": "run-s -cl lint-fix:wpcs lint-fix:scripts lint-fix:styles",
    "lint:wpcs": "composer exec -v -- phpcs -p --cache=./.phpcscache --colors --standard=WordPress --report=code --ignore=app/src/*,theme/cache/* app/ theme/",
    "lint:scripts": "eslint --cache --cache-location ./.eslintcache --color --format table ./resources/scripts/**",
    "lint:styles": "stylelint --cache --cache-location ./.stylelintcache --color --formatter verbose ./resources/styles/**",
    "lint-fix:wpcs": "composer exec -v -- phpcbf --cache --colors --standard=WordPress --ignore=app/src/* app/ theme/",
    "lint-fix:scripts": "eslint --cache --color --fix ./resources/scripts/**",
    "lint-fix:styles": "stylelint --cache --color --fix ./resources/styles/**",
    "lint-watch:wpcs": "chokidar \"app/**/*.php\" \"theme/**/*.php\" -i \"app/src/**/*.php\" -i \"theme/cache/**/*.php\"  -c \"npm run lint:wpcs --silent\"",
    "lint-watch:scripts": "chokidar \"resources/scripts/**/*.js\" -c \"npm run lint:scripts --silent\"",
    "lint-watch:styles": "chokidar \"resources/styles/**/*.scss\" -c \"npm run lint:styles --silent\"",
    "lint-watch": "run-p lint-watch:wpcs lint-watch:scripts lint-watch:styles",
    "i18n": "run-s -cl i18n:textdomain i18n:pot",
    "i18n:textdomain": "wpi18n addtextdomain --exclude=dist,docs,node_modules,resources,vendor --textdomain=app",
    "i18n:pot": "wpi18n makepot --exclude=dist,docs,node_modules,resources,vendor --main-file=theme/style.css --domain-path=languages/ --pot-file=app.pot --type=wp-theme --textdomain=app",
    "release": "run-s -cl build release:zip",
    "release:zip": "node resources/build/release/release.js"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-brands-svg-icons": "^5.11.2",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "airbnb-browser-shims": "^3.3.0",
    "autoprefixer": "^9.6.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "^4.3.1",
    "clean-webpack-plugin": "3.0.0",
    "cross-env": "^5.2.1",
    "css-loader": "^3.4.1",
    "cssnano": "^4.1.10",
    "file-loader": "^3.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "import-glob": "^1.5.0",
    "loader-utils": "^1.2.3",
    "loglevel": "^1.6.6",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^2.1.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-spritesmith": "^1.0.2"
  },
  "devDependencies": {
    "archiver": "^3.0.0",
    "browser-sync": "^2.23.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chokidar-cli": "^2.1.0",
    "eslint": "^6.7.2",
    "eslint-config-es": "^3.19.12",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unicorn": "^15.0.1",
    "node-wp-i18n": "^1.2.1",
    "shelljs": "^0.8.3",
    "stylelint": "^10.1.0",
    "stylelint-config-sass-guidelines": "^6.0.0"
  },
  "name": "airfleet",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT"
}
